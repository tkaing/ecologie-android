<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_connexion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Identifiant"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Identifiant" />

    <EditText
        android:id="@+id/login_ev"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:autofillHints=""
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:shadowColor="@android:color/background_light"
        android:textColor="#0C0C0C"
        android:textColorHint="#090909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:shadowColor="@android:color/background_light" />

    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de Passe"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mot de Passe" />

    <EditText
        android:id="@+id/password_ev"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:autofillHints="@string/password"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#070707"
        android:textColorHint="#050505"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="100dp" />

    <Button
        android:id="@+id/connexion_btn"
        android:layout_width="267dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="#3F51B5"
        android:text="@string/Connexion"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="339dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createNewUser"
            android:layout_width="107dp"
            android:layout_height="22dp"
            android:text="S'inscrire ?"
            android:textColor="#3F51B5"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="391dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3F51B5"
            android:text="mot de passe oubliÃ© ?"
            tools:layout_editor_absoluteX="231dp"
            tools:layout_editor_absoluteY="391dp" />
    </LinearLayout>
</LinearLayout>